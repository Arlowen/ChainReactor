<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.arlowen.chainreactor</id>
    <name>ChainReactor</name>
    <vendor>arlowen</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.ChainReactorBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window -->
        <toolWindow
            id="ChainReactor"
            anchor="right"
            icon="AllIcons.Actions.Execute"
            factoryClass="com.github.arlowen.chainreactor.toolWindow.ChainReactorToolWindowFactory"/>

        <!-- Settings -->
        <applicationConfigurable
            id="com.github.arlowen.chainreactor.settings"
            displayName="ChainReactor"
            instance="com.github.arlowen.chainreactor.settings.ChainReactorConfigurable"/>

        <!-- State Persistence -->
        <applicationService
            serviceImplementation="com.github.arlowen.chainreactor.settings.ChainReactorSettings"/>
        <projectService
            serviceImplementation="com.github.arlowen.chainreactor.state.ModuleOrderState"/>
    </extensions>

    <actions>
        <!-- Run Script Action -->
        <action
            id="ChainReactor.RunScript"
            class="com.github.arlowen.chainreactor.actions.RunScriptAction"
            text="运行脚本..."
            description="选择并运行一个 Shell 脚本"
            icon="AllIcons.Actions.Execute">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>

        <action
            id="ChainReactor.AddProject"
            class="com.github.arlowen.chainreactor.actions.AddToChainReactorAction"
            text="Add to ChainReactor"
            description="将目录添加到 ChainReactor"
            icon="AllIcons.General.Add">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
